global MakeEnemy = function(world, coord)
{
	local Enemy = MakeEntity(world, coord);

	Enemy.type = EntityType.Enemy;
	Enemy.max_health = randint(1, 3).Float();
	Enemy.health = Enemy.max_health;
	Enemy.frenzied = false;
	Enemy.stun = 0;

	Enemy.OnTickTurn = function()
    {
    };

	Enemy.OnUpdate = function()
	{
	};

	Enemy.OnTakeDamage = function()
	{
		g_game.state.EmitParticlesAt("blood", .GetCenterWorld(), 24);
	};

	return Enemy;
};

